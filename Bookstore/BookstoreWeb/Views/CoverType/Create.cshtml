@model BookStore.Models.CoverType

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<form method="post">
    <div class=" border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kaft soort toevoegen</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:250px">Voeg toe</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:250px">
            Terug naar overzicht
        </a>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
